<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/todaydata_item_height"
        android:background="@drawable/list_item_selector">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:text="123213"
            android:textColor="@color/context_1"
            app:layout_heightPercent="40%"
            app:layout_marginLeftPercent="@string/common_padding_left"
            app:layout_textSizePercent="25%" />

        <com.rey.material.widget.Switch
            android:id="@+id/com_switch"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="40%"
            app:layout_marginRightPercent="@string/common_padding_left" />

        <TextView
            android:id="@+id/tv_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/touch_color"
            android:visibility="visible" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</LinearLayout>
