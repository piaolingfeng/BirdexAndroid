<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin_top_height"
            android:layout_marginTop="@dimen/item_margin_top_height"
            android:text="dfadfasd"
            android:textColor="@color/order_detail_text_color"
            android:textSize="@dimen/msg_detail_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top_height">

            <TextView
                android:id="@+id/tv_product_code_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_margin_top_height"
                android:text="@string/tv_product_code"
                android:textColor="@color/msg_context_color"
                android:textSize="@dimen/msg_detail_title" />

            <TextView
                android:id="@+id/tv_product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_margin_top_height"
                android:layout_toLeftOf="@+id/tv_count"
                android:layout_toRightOf="@+id/tv_product_code_t"
                android:text="dfadfasd"
                android:textColor="@color/msg_context_color"
                android:textSize="@dimen/msg_detail_title" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/item_margin_top_height"
                android:text="x1"
                android:textColor="@color/msg_context_color"
                android:textSize="@dimen/msg_detail_title" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_inven_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin_top_height"
            android:layout_marginTop="@dimen/item_margin_top_height"
            android:text="dfadfasd"
            android:textColor="@color/red"
            android:textSize="@dimen/msg_detail_title"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>