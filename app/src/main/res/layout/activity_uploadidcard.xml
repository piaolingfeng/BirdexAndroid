<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.birdex.bird.widget.TitleView
        android:id="@+id/title_1l"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />


    <EditText
        android:id="@+id/idcard_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_background"
        android:hint="@string/input_IDCard"
        app:layout_marginLeftPercent="7%"
        app:layout_marginRightPercent="7%"
        app:layout_marginTopPercent="5%" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_marginTopPercent="5%">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_heightPercent="25%"
            app:layout_marginLeftPercent="7%"
            app:layout_marginRightPercent="2%">

            <ImageView
                android:id="@+id/left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rect_gray"
                android:scaleType="center"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/front_IDCard"
                android:textColor="#13A7DF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_heightPercent="25%"
            app:layout_marginLeftPercent="2%"
            app:layout_marginRightPercent="7%">

            <ImageView
                android:id="@+id/right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rect_gray"
                android:scaleType="center"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/back_IDCard"
                android:textColor="#13A7DF" />

        </LinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>


    <Button
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="15%"
        android:gravity="center"
        android:text="@string/upload_confirm"
        android:textColor="#FFFFFF"
        android:background="@drawable/out_selector"
        android:textSize="18sp" />
    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="7%"
        android:gravity="center"
        app:layout_marginTopPercent="2%"
        android:text="取  消"
        android:textColor="#8D8C8E"
        android:background="@drawable/rect_gray"
        android:textSize="18sp" />


</com.zhy.android.percent.support.PercentLinearLayout>