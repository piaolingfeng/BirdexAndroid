<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/same_order_other_marginlr"
        android:layout_marginRight="@dimen/same_order_other_marginlr"
        android:layout_marginTop="@dimen/same_order_other_margintb"
        android:background="@drawable/same_order_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/same_order_head_paddtb"
            android:paddingLeft="@dimen/same_order_paddinglf"
            android:paddingRight="@dimen/same_order_paddinglf"
            android:paddingTop="@dimen/same_order_head_paddtb">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/sameorder_others_title"
                android:textColor="@color/black_1"
                android:textSize="@dimen/same_order_other_font0" />

            <ImageView
                android:id="@+id/iv_sameorder_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/delete_edt" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/gray_7" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/xrv_sameorder_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:paddingTop="@dimen/same_order_list_paddtop"
            android:paddingBottom="@dimen/same_order_list_paddbottom"/>
    </LinearLayout>
</RelativeLayout>