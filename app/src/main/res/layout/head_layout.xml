<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/headview_padding_top"
    android:paddingBottom="@dimen/headview_padding_bottom"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_headview_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_headview_left"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_headview_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/headview_title_size"
        android:gravity="center"
        android:layout_weight="1.0"
        android:textColor="@color/white"/>
    <LinearLayout
        android:id="@+id/ll_headview_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_headview_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_headview_right"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>