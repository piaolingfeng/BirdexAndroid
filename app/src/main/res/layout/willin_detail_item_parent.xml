<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/detail_willin_item_marginlr"
    android:layout_marginRight="@dimen/detail_willin_item_marginlr"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/detail_willin_item_paddingtb"
    android:background="@color/gray_4"
    android:paddingTop="@dimen/detail_willin_item_paddingtb">

    <TextView
        style="@style/detail_willin_left"
        android:gravity="right"
        android:text="@string/willin_inventory"
        android:textColor="@color/black_1"
        android:textSize="@dimen/detail_inner_font1" />
    <LinearLayout
        style="@style/detail_willin_right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_willin_inventoryname"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:textSize="@dimen/detail_inner_font1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/detail_willin_item_marginlr"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_1"

                android:text="@string/willin_num"
                android:textSize="@dimen/detail_inner_font1" />
            <TextView
                android:id="@+id/tv_willin_inventorynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_1"
                android:textSize="@dimen/detail_inner_font1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>