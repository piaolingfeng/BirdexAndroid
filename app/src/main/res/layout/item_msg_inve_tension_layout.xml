<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_margin_top_height"
            android:layout_marginLeft="@dimen/item_margin_top_height"
            android:text="@string/msg_warning"
            android:textColor="@color/order_detail_text_color"
            android:textSize="@dimen/msg_detail_title" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_margin_top_height"
            android:text="dfadfasd"
            android:textColor="@color/order_detail_text_color"
            android:textSize="@dimen/msg_detail_title" />

        <include
            layout="@layout/single_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_code_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_margin_top_height"
            android:layout_marginLeft="@dimen/item_margin_top_height"
            android:text="@string/tv_product_code"
            android:textColor="@color/msg_context_color"
            android:textSize="@dimen/msg_detail_context" />

        <TextView
            android:id="@+id/tv_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_margin_top_height"
            android:layout_toRightOf="@+id/tv_product_code_t"
            android:text="dfadfasd"
            android:textColor="@color/msg_context_color"
            android:textSize="@dimen/msg_detail_context" />


        <ImageView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/item_margin_top_height"
            android:paddingRight="@dimen/item_margin_top_height"
            android:src="@drawable/copy" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/msg_context_color"
        android:layout_marginLeft="@dimen/item_margin_top_height"
        android:textSize="@dimen/msg_detail_context"
        android:maxLines="2"
        android:minLines="2"
        android:text="dfdafdfdfdsfdsf"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_marginLeft="@dimen/item_margin_top_height"
        android:layout_marginTop="@dimen/item_margin_top_height"
        android:textSize="@dimen/msg_detail_context"
        android:text="dfdafdfdfdsfdsf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/order_detail_text_color"
        android:layout_marginLeft="@dimen/item_margin_top_height"
        android:layout_marginTop="@dimen/item_margin_top_height"
        android:textSize="@dimen/msg_detail_title"
        android:text="@string/msg_inv_err"/>
</LinearLayout>