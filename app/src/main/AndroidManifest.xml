<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.birdex.bird">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.MyAccountInfoActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="com.bird.app.splashy.CLEARSPLASH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MyAccountActivity" />
        <activity android:name=".activity.IconChangeActivity" />
        <activity android:name=".activity.TodayDataActivity" />
        <activity
            android:name=".activity.ChangeAdressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LogisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MipcaActivityCapture"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.InventoryActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activity.MyOrderListActivity"
            android:theme="@style/AppCompat.style"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <service android:name=".update.UpdateService" />

        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/title_activity_about" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="570b0ca4e0f55a6f22001b23"></meta-data>
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="c10487564487dda1bacf9f96af6a11ab"></meta-data>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="Umeng"></meta-data>

        <activity
            android:name=".activity.NotiListActivity"
            android:label="@string/title_activity_noti_list"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <service
            android:name=".service.NotificationService"
            android:enabled="true" >
            <intent-filter android:priority="1000" >
                <action android:name="com.dbjtech.myservice" />
            </intent-filter>
        </service>
        <receiver android:name=".broadcast.NotificationBroadcast" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <action android:name="com.dbjtech.waiqin.destroy" />//这个就是自定义的action
            </intent-filter>
        </receiver>
    </application>

</manifest>
