<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_mine_item_space"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical" />
    <LinearLayout
        android:id="@+id/ll_mine_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_mine_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_mine_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mine_item_font"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="@dimen/mine_item_size" />

    </LinearLayout>

    <View
        android:id="@+id/v_mine_item_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />


</LinearLayout>
