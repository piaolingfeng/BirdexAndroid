    <com.birdex.bird.widget.TitleView
        android:id="@+id/title_1l"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_1l"
        android:background="@drawable/myaccount_background">

        <com.birdex.bird.widget.CircularImageView
            android:id="@+id/head_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="2dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/contacts"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="32%" />

        <TextView
            android:id="@+id/head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/center_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backgroud"
        android:orientation="horizontal"
        app:layout_marginTopPercent="3%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/account_type"
            android:textColor="#979797"
            android:textSize="16sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9B9B9B" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/balance"
            android:textColor="#979797"
            android:textSize="16sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9B9B9B" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/credit"
            android:textColor="#979797"
            android:textSize="16sp" />

    </com.zhy.android.percent.support.PercentLinearLayout>


    <TextView
        android:id="@+id/division_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/center_ll"
        android:background="#C7C7C7"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="3%" />


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/yunfei_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/division_01"
        android:orientation="horizontal"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/freight"
            android:textColor="#979797"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/freight_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#13A7DF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="#C7C7C7"
                />
            <TextView
                android:id="@+id/left_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F5A623"
                />

        </LinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>


