            android:textSize="16sp" />


        <TextView
            android:id="@+id/tariff_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥0"
                android:textColor="#F5A623"/>


        </RelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:id="@+id/division_03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/guanshui_ll"
        android:background="#C7C7C7"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="3%" />


    <Button
        android:id="@+id/recharge_bt"
        android:layout_below="@+id/division_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/rect_fullbluew_selector"
        android:text="@string/recharge"
        android:textColor="@color/btn_blue_selector"

        android:textSize="20sp"
        app:layout_marginTopPercent="3%"
        app:layout_paddingBottomPercent="3%w"
        app:layout_paddingLeftPercent="20%w"
        app:layout_paddingRightPercent="20%w"
        app:layout_paddingTopPercent="3%w" />

    <TextView
        android:id="@+id/shouzhimingxi"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="#979797"
        android:layout_below="@+id/recharge_bt"
        app:layout_marginTopPercent="3%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/myaccount_title_2"/>

    <TextView
        android:id="@+id/recharge_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/recharge"
        android:textSize="18sp"
        app:layout_marginBottomPercent="2%"
        app:layout_marginLeftPercent="8%" />

    <TextView
        android:id="@+id/account_detail"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/account_detail"
        android:textSize="18sp"
        app:layout_marginBottomPercent="2%"
        />

    <TextView
        android:id="@+id/account_manager"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/myaccount_manage"
        android:textSize="18sp"
        app:layout_marginBottomPercent="2%"
        app:layout_marginRightPercent="8%" />

