<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    -->
    <!-- Mydialog-->
    <style name="semester_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="menu_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:drawablePadding">-8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/menu_item</item>
    </style>

    <style name="AppSplash" parent="android:Theme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FeelyouWindowAnimTheme">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_left</item>
    </style>
    <!--我的账号 底部三个切换-->
    <style name="myaccount_style">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="myaccount_style_unselect" parent="myaccount_style">
        <item name="android:textColor">#8e949a</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="myaccount_style_select" parent="myaccount_style">
        <item name="android:textColor">@color/selected</item>
    </style>

    <style name="text_blue" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18dp</item>
    </style>
    <!--库存页面的字体样式-->
    <style name="inventory_item_text">
        <item name="android:textColorPrimary">@color/inventory_item_black</item>
    </style>
    <style name="inventory_item_info">
        <item name="android:textColorPrimary">@color/inventory_item_gray</item>
    </style>
    <style name="inventory_item_num">
        <item name="android:textColorPrimary">@color/inventory_item_blue</item>
        <item name="android:textColorSecondary">@color/inventory_item_blue</item>
    </style>
    <!--我的库存item中的蓝色字体-->
    <style name="inventory_item_blue1" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/inventory_item_blue</item>
        <item name="android:textSize">@dimen/inventory_item_number</item>
    </style>
    <style name="inventory_item_black1" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/inventory_item_black</item>
        <item name="android:textSize">@dimen/inventory_item_number</item>
    </style>
    <style name="inventory_item_gray1" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/inventory_item_gray</item>
        <item name="android:textSize">@dimen/inventory_item_text</item>
    </style>
    <style name="title_while" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
